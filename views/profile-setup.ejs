<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Setup Your Profile</title>
    <link rel="stylesheet" href="/stylesheet/style.css">
    <style>
        .profile-setup-container {
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }
        
        .profile-setup-form {
            border-radius: 50% 50% 50% 50%/60% 60% 40% 40%;
            box-shadow:
                inset 20px 20px 20px #0000000d,
                25px 35px 20px #0000000d,
                25px 30px 30px #0000000d,
                inset -20px -20px 25px #ffffffe6;
            transition: all ease .5s;
            position: relative;
            padding: 20px;
        }
        
        .profile-setup-box {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 20px;
            padding: 60px 40px;
            text-align: center;
        }
        
        .profile-pic-container {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            overflow: hidden;
            border: 3px solid #01b4ff;
            margin-bottom: 15px;
            background-color: #f0f0f0;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .profile-pic-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .profile-pic-container .placeholder {
            font-size: 50px;
            color: #ccc;
        }
        
        .file-input-wrapper {
            position: relative;
            overflow: hidden;
            display: inline-block;
            margin: 10px 0;
        }
        
        .file-input-wrapper input[type=file] {
            position: absolute;
            left: 0;
            top: 0;
            opacity: 0;
            cursor: pointer;
            width: 100%;
            height: 100%;
        }
        
        .file-input-button {
            background-color: #01b4ff;
            color: white;
            padding: 8px 16px;
            border-radius: 20px;
            cursor: pointer;
            display: inline-block;
        }
        
        textarea {
            width: 100%;
            padding: 10px;
            border-radius: 10px;
            border: none;
            outline: none;
            font-family: inherit;
            box-shadow: 
                inset 2px 5px 10px #0000001a,
                inset -2px -5px 10px #0000001a;
            resize: vertical;
            min-height: 80px;
        }
    </style>
</head>
<body>
    <div class="profile-setup-container">
        <div class="profile-setup-form">
            <div class="profile-setup-box">
                <h1>Setup Your Profile</h1>
                
                <div class="profile-pic-container">
                    <div class="placeholder">ðŸ‘¤</div>
                </div>
                
                <form id="profile-setup-form" action="/profile-setup" method="post" enctype="multipart/form-data">
                    <div class="file-input-wrapper">
                        <div class="file-input-button">Choose Profile Picture</div>
                        <input type="file" name="profilePicture" accept="image/*" id="profilePicInput">
                    </div>
                    
                    <div class="input-box" style="width: 250px; margin: 15px 0;">
                        <textarea placeholder="Tell us about yourself..." name="bio" required></textarea>
                    </div>
                    

                    
                    <div class="input-box btn" style="width: 150px;">
                        <input type="submit" value="Complete Setup">
                    </div>
                </form>
            </div>
        </div>
        
        <div class="signin-right">
            <div class="satelite signup signup-button" onclick="window.location.href='/'">
                <span>Home</span>
            </div>
            <div class="satelite forget" onclick="window.location.href='/login'">
                <span>Login</span>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('profilePicInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    const container = document.querySelector('.profile-pic-container');
                    container.innerHTML = `<img src="${event.target.result}" alt="Profile Picture">`;
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
</body>
</html>